{% extends "layouts/base.njk" %}
{% block content %}
<body class="resources">
    {% include "partials/uio.njk" %}
    {% include "partials/header.njk" %}
    <main>
        <article>
            <header>
                <h1>{{ title }}</h1>
            </header>
            <div class="content">
                {{ content | safe }}
                <div class="grid">
                {% for resource in collections.resources %}
                <article class="resource">
                    <h2><a href="{{ resource.url }}">{{ resource.data.title }}</a></h2>
                    <p class="type">Type: {{ resource.data.type }}</p>
                    <p class="building-block">Building Block: {{ resource.data.buildingBlock }}</p>
                </article>
                {% endfor %}
                </div>
            </div>
        </article>
    </main>
</body>
{% endblock %}
