{% extends "layouts/base.njk" %}

{% block toc %}
{% endblock %}

{% block content %}
<div class="content space-y-4">
    {{ content | safe }}
    <div class="grid gap-4">
        {% for caseStudy in collections.caseStudies %}
        <article class="case-study grid gap-4 grid-cols-2">
            <div class="bg-blue-500 h-64"></div>
            <div class="flex flex-col justify-center">
                <h2><a href="{{ caseStudy.url }}">{{ caseStudy.data.title }}</a></h2>
                <p class="subtitle font-semibold">{{ caseStudy.data.subtitle }}</p>
                <p class="byline mt-2">By {%- for author in caseStudy.data.authors %}
                    {{ "" if loop.first else ", " }}
                    {{ author }}
                {%- endfor %}{% if caseStudy.data.organization %}, {{ caseStudy.data.organization }}{% endif %}</p>
                <p class="date">{{ caseStudy.data.startDate }}{% if caseStudy.data.endDate -%}
                {{ "–" + caseStudy.data.endDate if caseStudy.data.endDate !== caseStudy.data.startDate else "" }}
                {%- else -%}
                –present
                {%- endif %}
                </p>
            </div>
        </article>
        {% endfor %}
    </div>
</div>
{% endblock %}
